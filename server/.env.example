# Environment
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alma_payment_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API Keys - Mobile Money Operators
MPESA_API_KEY=
MPESA_API_SECRET=
MPESA_SHORTCODE=
MPESA_PASSKEY=
MPESA_CALLBACK_URL=http://localhost:5000/api/webhooks/mpesa

ORANGE_API_KEY=
ORANGE_API_SECRET=
ORANGE_MERCHANT_CODE=
ORANGE_CALLBACK_URL=http://localhost:5000/api/webhooks/orange

AIRTEL_API_KEY=
AIRTEL_API_SECRET=
AIRTEL_MERCHANT_ID=
AIRTEL_CALLBACK_URL=http://localhost:5000/api/webhooks/airtel

# Exchange Rate API
EXCHANGE_RATE_API_KEY=
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# Bank Partner Configuration
BANK_SFTP_HOST=
BANK_SFTP_USER=
BANK_SFTP_PASSWORD=
BANK_SFTP_PORT=22

# Email Configuration (SendGrid/Mailgun)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=
EMAIL_FROM=noreply@almapay.cd
EMAIL_FROM_NAME=Alma Pay

# SMS Configuration (Twilio/Africa's Talking)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Application Configuration
APP_URL=http://localhost:3000
API_URL=http://localhost:5000
ADMIN_EMAIL=admin@almapay.cd

# Commission Rates (in percentage)
COMMISSION_RATE_COLLECTION=2.8
COMMISSION_RATE_WITHDRAWAL=1.7

# Exchange Rate Spread (in percentage)
EXCHANGE_RATE_SPREAD=2.5

# Operational Limits
MIN_WITHDRAWAL_AMOUNT_USD=50
MIN_WITHDRAWAL_AMOUNT_CDF=142725
DAILY_WITHDRAWAL_CUTOFF_HOUR=16

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# File Upload
MAX_FILE_SIZE_MB=5
UPLOAD_PATH=./uploads

# BCC Reporting
BCC_REPORT_EMAIL=reporting@bcc.cd
BCC_SFTP_HOST=
BCC_SFTP_USER=
BCC_SFTP_PASSWORD=

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=

# Feature Flags
ENABLE_2FA=true
ENABLE_FRAUD_DETECTION=true
ENABLE_AUTO_RECONCILIATION=true
